{
  "name": "@ghchinoy/lit-audio-ui",
  "version": "0.1.0",
  "description": "A pure Lit WebComponents port of modern audio UI components",
  "author": "G. Hussain Chinoy",
  "license": "Apache-2.0",
  "main": "dist/scream-audio-ui.umd.js",
  "module": "dist/scream-audio-ui.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/scream-audio-ui.es.js",
      "require": "./dist/scream-audio-ui.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "tsc && vite build",
    "build:demo": "vite build -c vite.demo.config.ts",
    "preview": "vite preview",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm run build:lib"
  },
  "dependencies": {
    "@lit/context": "^1.1.6",
    "@material/web": "^2.0.0",
    "lit": "^3.3.1",
    "three": "^0.182.0"
  },
  "peerDependencies": {
    "lit": "^3.0.0",
    "three": ">=0.150.0"
  },
  "devDependencies": {
    "@types/three": "^0.182.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint-plugin-lit": "^1.15.0",
    "gts": "^7.0.0",
    "typescript": "~5.6.3",
    "vite": "^8.0.0-beta.13"
  }
}
